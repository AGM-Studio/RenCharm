<idea-plugin>
    <id>xyz.agmstudio.rencharm</id>
    <name>RenCharm</name>
    <description>Renâ€™Py language support for PyCharm</description>
    <vendor email="ashenguard@agmstudio.xyz">Ashenguard</vendor>

    <idea-version since-build="251" until-build="260.*"/>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Ren'Py"
                language="RenPy"
                description="Ren'Py Script File"
                implementationClass="xyz.agmstudio.rencharm.lang.RenpyFileType"
                icon="/icons/rpy.png"
                extensions="rpy"
        />
        <lang.syntaxHighlighterFactory
                language="RenPy"
                implementationClass="xyz.agmstudio.rencharm.highlighting.RenpySyntaxHighlighterFactory"
        />
        <colorSettingsPage
                implementationClass="xyz.agmstudio.rencharm.highlighting.RenpyColorSettingsPage"
                displayName="Ren'Py"
        />
    </extensions>
</idea-plugin>
